<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>

<body>
@if (Request.RequestContext.HttpContext.User.Identity.IsAuthenticated)
{
    <div>@Html.ActionLink("Sign out", "SignOut", "Account", new { ReturnUrl = Request.Url.AbsoluteUri }, null)</div>
}
else
{
    <div>@Html.ActionLink("Sign up or sign in", "SignInOrSignUp", "Account")</div>
}
    @RenderBody()
</body>
</html>

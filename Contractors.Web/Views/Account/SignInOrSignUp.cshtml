@{
    ViewBag.Title = "SignInOrSignUp";
}

<h2>Sign Up</h2>

@using (Html.BeginForm("SignUp", "Account"))
{
    <p><label for="firstName">First Name:</label><input type="text" name="firstName" /></p>
    <p><label for="lastName">Last Name:</label><input type="text" name="lastName" /></p>
    <p><label for="emailAddress">Email Address:</label><input type="text" name="emailAddress" /></p>
    <p><label for="password">Password:</label><input type="password" name="password" /></p>
    <p><label for="confirmPassword">Confirm Password:</label><input type="password" name="confirmPassword" /></p>
    <p><input type="submit" value="Create Account" /></p>
}

<h2>Sign In</h2>

@using (Html.BeginForm("SignIn", "Account"))
{
    <p><label for="emailAddress">Email Address:</label><input type="text" name="emailAddress" /></p>
    <p><label for="password">Password:</label><input type="password" name="password" /></p>
    <p><input type="submit" value="Create Account" /></p>
}